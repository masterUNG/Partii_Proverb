<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignWithParentIfMissing="false"
    android:layout_marginLeft="0dp"
    android:layout_marginRight="0dp"
    app:layout_anchorGravity="left|right"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="th.or.nectec.partii.proverb.partii_proverb.MainActivity"
    tools:showIn="@layout/activity_main">

    <TableLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <TableRow>

            <TextView
                android:id="@+id/textView7"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:paddingBottom="15dp"
                android:text="ทายคำสุภาษิตจากภาพกัน"
                android:textAlignment="center"
                android:textColor="@color/about_facebook_color"
                android:textSize="24sp" />
        </TableRow>

        <TableRow android:foregroundGravity="center_vertical|center_horizontal|center">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:weightSum="1">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="match_parent"
                    android:layout_height="223dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/i01"
                    tools:layout_editor_absoluteX="35dp"
                    tools:layout_editor_absoluteY="76dp" />
            </LinearLayout>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/answerstatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="15dp"
                    android:visibility="invisible"
                    app:srcCompat="@android:drawable/ic_delete" />

                <TextView
                    android:id="@+id/asranswer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textColor="@color/about_facebook_color"
                    android:textSize="30sp"
                    android:visibility="visible"
                    tools:layout_editor_absoluteX="0dp"
                    tools:layout_editor_absoluteY="0dp" />
            </RelativeLayout>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/answer"
                android:layout_width="382dp"
                android:layout_height="33dp"
                android:text="TextView"
                android:visibility="invisible"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="310dp" />
        </TableRow>

    </TableLayout>

</android.support.constraint.ConstraintLayout>
